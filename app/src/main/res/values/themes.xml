<resources>
    <!-- Base application theme. -->
    <style name="Theme.FinanceTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primary_light_theme</item>
        <item name="colorPrimaryVariant">@color/primary_variant_light_theme</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary_light_theme</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_light_theme</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorTertiary">@color/tertiary_light_theme</item>
        <item name="colorOnTertiary">@color/on_tertiary_light_theme</item>

        <item name="android:colorBackground">@color/general_background_color</item>

        <item name="tabStyle">@style/NavigationTabStyle</item>
        <item name="imageButtonStyle">@style/ImageViewStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>

    </style>

    <style name="NavigationTabStyle" parent="Widget.Material3.TabLayout">
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabBackground">@color/tertiary_light_theme</item>

        <item name="tabSelectedTextColor">@color/secondary_light_theme</item>
        <item name="tabTextColor">@color/on_tertiary_light_theme</item>
        <item name="tabIconTint">@color/tab_color</item>

        <item name="tabIndicatorColor">@color/secondary_light_theme</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="ImageViewStyle">
        <item name="tint">@color/black</item>
        <item name="backgroundColor">@color/transparent</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_font_size</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/secondary_light_theme</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
    </style>
</resources>